<div class="panel panel-default">
    <div class="panel-heading">
        {{tableName}} <i>({{rowCount}})</i>
    </div>

    <div class="panel-body table-responsive">
        <table class="table table-striped table-hover">
            {{#if headings}}
            <thead>
                <tr>
                    <th>#</th>
                    {{#each heading in headings}}
                      <th {{action "sortBy" heading}}>
                        <button type="button" class="btn btn-sm pull-left">
                          <span {{bind-attr class="glyphiconDirection :glyphicon"}} /> {{heading}}
                        </button>                      
                      </th>
                    {{/each}}
                </tr>
            </thead>
            {{/if}}
            
            <tbody>
                {{#each row in sortedRows}}
                    <tr>
                        <td>{{_view.contentIndex}}</td>
                        {{#each column in row.columns}}
                            <td>{{column.value}}</td>
                        {{/each}}
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>