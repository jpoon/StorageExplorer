<h2 id='title'>Azure Table Storage Explorer</h2>
<br>

<div class="panel panel-default">
    <div class="panel-heading">
        <span>Storage Account Information</span>
    </div>
    <div class="panel-body row">
        <form {{action "load" on="submit"}}>
            <div class="form-group col-md-2">
                {{input value=accountName type="text" class="form-control floating-label" placeholder="storage account name"}}
            </div>
            <div class="form-group col-md-10">
                {{input value=accountKey type="text" class="form-control floating-label" placeholder="storage account key"}}
            </div>
            <div class="col-md-2 col-md-offset-10 text-right">
                <button type="submit" {{bind-attr disabled=loadDisabled}} class="btn btn-primary btn-raised">Load</button>
            </div>
        </form>
    </div>

    {{#if showProgress}}
    <div class="progress progress-striped active">
        <div class="progress-bar" style="width: 100%"></div>
    </div>
    {{/if}}
</div>

{{outlet}}
