<!-- accordion -->
<div class="accordion" id="tableAccordion" class="panel-group">
    <div class="panel panel-default">
        <div class="panel-heading">
            <a class="panel-title" data-toggle="collapse" data-parent="#tableAccordion" href="#collapseFilter">
                Filter
            </a>
        </div>
    </div>
    <div id="collapseFilter" class="panel-collapse collapse">
        <div class="panel-body table-responsive">
            {{#if headings}}
                {{#each heading in headings}}
                <div class="form-group">
                    <label>
                        <input type="checkbox" checked {{action 'toggleColumnVisibility' heading _view.contentIndex on='change'}}>
                        {{heading}}
                    </label>
                </div>
                {{/each}}

                {{toggle-checkbox}}
            {{/if}}
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <a class="panel-title" data-toggle="collapse" data-parent="#tableAccordion" href="#collapseQuery">
                Query
            </a>
        </div>
    </div>
    <div id="collapseQuery" class="panel-collapse collapse">
        <div class="panel-body">
            <div class="col-md-12">
                <div class="input-group">
                    {{input value=entityQuery type="text" class="form-control floating-label" placeholder="query (e.g. PartitionKey gt foo-bar)"}}
                    <span class="input-group-btn"><button class="btn btn-primary" type="button" {{action 'query'}}>Go!</button></span>
                    <span class="input-group-btn"><button class="btn btn-default" type="button" {{action 'reset'}}>Reset</button></span>
                </div>
            </div>
        </div>
    </div>
</div>

<hr />

<!-- table -->
<table class="table table-striped table-hover" id="table">
    {{#if headings}}
    <thead>
        <tr>
            <th>#</th>
            {{#each heading in headings}}
              <th nowrap {{action "sortBy" heading}}>
                  <span {{bind-attr class=":glyphicon glyphiconDirection"}} aria-hidden="true" />
                  {{heading}}
              </th>
            {{/each}}
        </tr>
    </thead>
    {{/if}}

    <tbody>
        {{render 'row' rows}}
    </tbody>
</table>
